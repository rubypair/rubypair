<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) || "RubyPair.com" %></title>
    <%= stylesheet_link_tag :application %>
    <!--[if IE]>
        <link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
    <![endif]-->
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        <div id="logo">
          <a href="/">
            <%= image_tag "/assets/logo.png" %>
          </a>
        </div>
        <% if current_user %>
          <div id="menu">
            <span><%= link_to "Sign Out", signout_path %></span>
            <span>/</span>
            <span><a href="<%= edit_user_path(current_user) %>">Pairing Profile</a></span>
          </div>
        <% else %>
          <a id="signin" href="/auth/github">
            <%= image_tag "/assets/signin-button.png" %>
          </a>
        <% end %>
      </div>

      <div id="container">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <%= content_tag :h1, yield(:title)  %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
