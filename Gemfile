source 'http://rubygems.org'

gem 'rails', '3.1.0'

gem 'mongoid'
gem 'mongoid_fulltext'
gem 'bson_ext'

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'compass'
  gem 'compass-960-plugin'
end

gem 'haml'
gem 'jquery-rails'
gem 'omniauth', '~> 1.0'
gem 'omniauth-github'

group :development, :test do
  gem "rspec-rails"
  gem "guard-rspec"
  gem "awesome_print", :require => 'ap'
  gem 'pry'
end

group :test do
  gem "launchy"
  gem "factory_girl_rails"
  gem 'database_cleaner'
  gem "capybara"
  gem "timecop"
end
